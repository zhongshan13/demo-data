{%- comment -%}
------------------------------------------------------------------------------
	Section: Reset Template
------------------------------------------------------------------------------
{%- endcomment -%}

{{- "account-entrance.build.css" | asset_url | stylesheet_tag -}}

{%- style -%}
	#shopify-section-{{- section.id -}} {
		padding-top: {{- section.settings.offset_top_mobile -}}px;
		padding-bottom: {{- section.settings.offset_bottom_mobile -}}px;
	}

	@media screen and (min-width: 768px) {
		#shopify-section-{{- section.id -}} {
			padding-top: {{- section.settings.offset_top_desktop -}}px;
			padding-bottom: {{- section.settings.offset_bottom_desktop -}}px;
		}
	}
{%- endstyle -%}

{%- assign design = settings.design -%}
{%- assign enable_accents_spot = settings.enable_accents_spot -%}

<section
	class="{% if design == 'alternate' %}account-entrance-new account-entrance-new--login {% if enable_accents_spot %}account-entrance-new--accent-spot{% endif %}{% else %}account-entrance{% endif %}">
	<div class="container account-entrance__container">
		{%- form "reset_customer_password", class: "account-entrance__form" -%}
			<h1 class="account-entrance__heading">
				{{- "customer.reset_password.title" | t -}}
			</h1>

			<p class="account-entrance__text">
				{{- "customer.reset_password.subtext" | t -}}
			</p>

			{%- if form.errors -%}
				<h2 class="account-entrance__error-title h3" tabindex="-1" autofocus>
					<span class="visually-hidden">{{ 'general.accessibility.error' | t }}</span>

					{{ 'general.accessibility.form_error_title' | t }}
				</h2>

				{{- form.errors | default_errors -}}
			{%- endif -%}

			<div class="input-wrapper account-entrance__input-wrapper">
				<input
					class="input account-entrance__input account-entrance__input--password"
					id="ResetPassword"
					name="customer[password]"
					type="password"
					placeholder="{{- 'customer.reset_password.password' | t -}}"
					aria-label="{{- 'customer.reset_password.reset_password_aria_label' | t | escape -}}"
					required
				/>

				<label class="input-label" for="ResetPassword">
					{{- "customer.reset_password.password" | t -}}
				</label>
			</div>

			<div class="input-wrapper account-entrance__input-wrapper">
				<input
					class="input account-entrance__input account-entrance__input--password"
					id="PasswordConfirmation"
					name="customer[password_confirmation]"
					type="password"
					placeholder="{{- 'customer.reset_password.password_confirm' | t -}}"
					aria-label="{{- 'customer.reset_password.password_confirm_aria_label' | t | escape -}}"
					required
				/>

				<label class="input-label" for="PasswordConfirmation">
					{{- "customer.reset_password.password_confirm" | t -}}
				</label>
			</div>

			{% if design == 'alternate' %}
				<button type="submit"
						class="button-circle account-entrance__button"
						aria-label="{{- 'customer.reset_password.submit_aria_label' | t | escape -}}"
				>
					<span class="button__text">
						{{- 'customer.reset_password.submit' | t -}}
					</span>

					<span class="button-new__icon-container">
						<span class="button-new__icon-wrapper">
							{% render "icons-new", icon: "wave" %}
						</span>
					</span>
				</button>
			{% else %}
				<input
					class="button button--secondary account-entrance__button"
					type="submit"
					value="{{- 'customer.reset_password.submit' | t | upcase -}}"
					aria-label="{{- 'customer.reset_password.submit_aria_label' | t | escape -}}"
				/>
			{% endif %}
		{%- endform -%}
	</div>
</section>

{% schema %}
{
	"name": "Reset password template",
	"settings": [
		{
			"type": "header",
			"content": "Layout"
		},
		{
			"type": "range",
			"id": "offset_top_desktop",
			"min": 0,
			"max": 100,
			"step": 1,
			"unit": "px",
			"label": "Desktop offset top",
			"default": 60
		},
		{
			"type": "range",
			"id": "offset_bottom_desktop",
			"min": 0,
			"max": 100,
			"step": 1,
			"unit": "px",
			"label": "Desktop offset bottom",
			"default": 60
		},
		{
			"type": "range",
			"id": "offset_top_mobile",
			"min": 0,
			"max": 100,
			"step": 1,
			"unit": "px",
			"label": "Mobile offset top",
			"default": 30
		},
		{
			"type": "range",
			"id": "offset_bottom_mobile",
			"min": 0,
			"max": 100,
			"step": 1,
			"unit": "px",
			"label": "Mobile offset bottom",
			"default": 30
		}
	]
}
{%- endschema -%}
