		},
		{
			"id": "menu_headings_color",
			"type": "color",
			"label": "Heading",
			"default": "#8D8D8D"
		},
		{
			"id": "text_color",
			"type": "color",
			"label": "Text",
			"default": "#FFFFFF"
		},
		{
			"id": "copyright_text_color",
			"type": "color",
