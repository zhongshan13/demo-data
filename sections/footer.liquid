		},
		{
			"type": "color",
			"id": "button_icon_color_social_hover",
			"label": "Socials icon (hover)",
			"default": "#000000"
		},
		{
			"type": "color",
			"id": "button_background_color_social_hover",
			"label": "Socials background (hover)",
			"default": "#FFFFFF"
		},
		{
			"type": "color",
			"id": "button_border_color_social_hover",
			"label": "Socials border (hover)",
			"default": "#000000"
		}
	],
	"blocks": [
		{
			"type": "menu",
			"name": "Menu",
			"limit": 3,
			"settings": [
