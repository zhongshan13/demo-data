	{%- assign size_image_height_1199_2x 	= size_image_height_1199 | times: 2 -%}

	{%- assign size_image_width_991 		= 495 -%}
	{%- assign size_image_height_991 		= 359 -%}
	{%- assign size_image_width_991_2x 		= size_image_width_991 |  times: 2 -%}
	{%- assign size_image_height_991_2x 	= size_image_height_991 | times: 2 -%}
{%- endif -%}

<picture {% if enable_lazy_load %}class="lazy no-js-hidden"{% endif %}>
	{% if design == "alternate" %}
		<source
			{% if enable_lazy_load %}
				data-srcset="{{ featured_post.image | image_url: width: size_image_width_375, height: size_image_height_375 }} 1x,
						 	 {{ featured_post.image | image_url: width: size_image_width_375_2x, height: size_image_height_375_2x }} 2x"
				srcset="{{ featured_post.image | image_url: width: 10, height: 10 }} 1x,
						{{ featured_post.image | image_url: width: 20, height: 20 }} 2x"
			{% else %}
				srcset="{{ featured_post.image | image_url: width: size_image_width_375, height: size_image_height_375 }} 1x,
						{{ featured_post.image | image_url: width: size_image_width_375_2x, height: size_image_height_375_2x }} 2x"
			{% endif %}
			width="{{- size_image_width_375 -}}"
			height="{{- size_image_height_375 -}}"
			media="(max-width: 375px)"
		/>

		<source
			{% if enable_lazy_load %}
				data-srcset="{{ featured_post.image | image_url: width: size_image_width_420, height: size_image_height_420 }} 1x,
							 {{ featured_post.image | image_url: width: size_image_width_420_2x, height: size_image_height_420_2x }} 2x"
				srcset="{{ featured_post.image | image_url: width: 10, height: 10 }} 1x,
						{{ featured_post.image | image_url: width: 20, height: 20 }} 2x"
			{% else %}
				srcset="{{ featured_post.image | image_url: width: size_image_width_420, height: size_image_height_420 }} 1x,
						{{ featured_post.image | image_url: width: size_image_width_420_2x, height: size_image_height_420_2x }} 2x"
			{% endif %}
			width="{{- size_image_width_420 -}}"
			height="{{- size_image_height_420 -}}"
			media="(max-width: 420px)"
		/>

		<source
			{% if enable_lazy_load %}
				data-srcset="{{ featured_post.image | image_url: width: size_image_width_767, height: size_image_height_767 }} 1x,
							 {{ featured_post.image | image_url: width: size_image_width_767_2x, height: size_image_height_767_2x }} 2x"
