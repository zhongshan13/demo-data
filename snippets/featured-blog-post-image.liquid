						{{ featured_post.image | image_url: width: size_image_width_767_2x, height: size_image_height_767_2x }} 2x"
			{% endif %}
			width="{{- size_image_width_767 -}}"
			height="{{- size_image_height_767 -}}"
			media="(max-width: 767px)"
		/>
	{% endif %}

	<source
		{% if enable_lazy_load %}
			data-srcset="{{ featured_post.image | image_url: width: size_image_width_991, height: size_image_height_991 }} 1x,
						 {{ featured_post.image | image_url: width: size_image_width_991_2x, height: size_image_height_991_2x }} 2x"
			srcset="{{ featured_post.image | image_url: width: 10, height: 10 }} 1x,
