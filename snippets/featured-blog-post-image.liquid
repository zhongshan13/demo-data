		{% else %}
			srcset="{{ featured_post.image | image_url: width: size_image_width_991, height: size_image_height_991 }} 1x,
					{{ featured_post.image | image_url: width: size_image_width_991_2x, height: size_image_height_991_2x }} 2x"
		{% endif %}
		width="{{- size_image_width_991 -}}"
		height="{{- size_image_height_991 -}}"
		media="(max-width: 991px)"
	/>

	<source
		{% if enable_lazy_load %}
			data-srcset="{{ featured_post.image | image_url: width: size_image_width_1199, height: size_image_height_1199 }} 1x,
						 {{ featured_post.image | image_url: width: size_image_width_1199_2x, height: size_image_height_1199_2x }} 2x"
			srcset="{{ featured_post.image | image_url: width: 10, height: 10 }} 1x,
					{{ featured_post.image | image_url: width: 20, height: 20 }} 2x"
		{% else %}
			srcset="{{ featured_post.image | image_url: width: size_image_width_1199, height: size_image_height_1199 }} 1x,
					{{ featured_post.image | image_url: width: size_image_width_1199_2x, height: size_image_height_1199_2x }} 2x"
		{% endif %}
		width="{{- size_image_width_1199 -}}"
		height="{{- size_image_height_1199 -}}"
		media="(max-width: 1199px)"
	/>

	<source
		{% if enable_lazy_load %}
			data-srcset="{{ featured_post.image | image_url: width: size_image_width_1500, height: size_image_height_1500 }} 1x,
						 {{ featured_post.image | image_url: width: size_image_width_1500_2x, height: size_image_height_1500_2x }} 2x"
			srcset="{{- featured_post.image | image_url: width: 10, height: 10 }} 1x,
					{{ featured_post.image | image_url: width: 20, height: 20 }} 2x"
		{% else %}
			srcset="{{ featured_post.image | image_url: width: size_image_width_1500, height: size_image_height_1500 }} 1x,
					{{ featured_post.image | image_url: width: size_image_width_1500_2x, height: size_image_height_1500_2x }} 2x"
		{% endif %}
		width="{{- size_image_width_1500 -}}"
		height="{{- size_image_height_1500 -}}"
		media="(max-width: 1500px)"
	/>

	<img
		class="blog__featured-post-image"
		{% if enable_lazy_load %}
			src="{{ featured_post.image | image_url: width: 10, height: 10 }}"
			srcset="{{ featured_post.image | image_url: width: 10, height: 10 }}"
			data-src="{{ featured_post.image | image_url: width: size_image_width, height: size_image_height }}"
			data-srcset="{{ featured_post.image | image_url: width: size_image_width, height: size_image_height }} 1x,
						 {{ featured_post.image | image_url: width: size_image_width_2x, height: size_image_height_2x }} 2x"
		{% else %}
			src="{{ featured_post.image | image_url: width: size_image_width, height: size_image_height }}"
			srcset="{{ featured_post.image | image_url: width: size_image_width, height: size_image_height }} 1x,
					{{ featured_post.image | image_url: width: size_image_width_2x, height: size_image_height_2x }} 2x"
		{% endif %}
		alt="{{- featured_post.image.alt | escape -}}"
		width="{{- size_image_width -}}"
		height="{{- size_image_height -}}"
	/>
</picture>

