{% comment %}
	------------------------------------------------------------------------------
	Snippet: Featured blog new
	- featured_post: featured_post object (required)
	- enable_lazy_load: boolean (optional)

	{%- render 'featured-blog-post-image', featured_post: featured_post, enable_lazy_load: enable_lazy_load -%}
	------------------------------------------------------------------------------
{% endcomment %}

{%- assign design = settings.design -%}

{%- if design == "alternate" -%}
	{%- assign size_image_width 	= 854 -%}
	{%- assign size_image_height 	= 599 -%}
	{%- assign size_image_width_2x 	= size_image_width |  times: 2 -%}
	{%- assign size_image_height_2x = size_image_height | times: 2 -%}

	{%- assign size_image_width_1500 		= 689 -%}
	{%- assign size_image_height_1500 		= 484 -%}
	{%- assign size_image_width_1500_2x 	= size_image_width_1500 |  times: 2 -%}
	{%- assign size_image_height_1500_2x 	= size_image_height_1500 | times: 2 -%}

	{%- assign size_image_width_1199 		= 583 -%}
	{%- assign size_image_height_1199 		= 409 -%}
	{%- assign size_image_width_1199_2x 	= size_image_width_1199 |  times: 2 -%}
	{%- assign size_image_height_1199_2x 	= size_image_height_1199 | times: 2 -%}

	{%- assign size_image_width_991 		= 480 -%}
	{%- assign size_image_height_991 		= size_image_width_991 -%}
	{%- assign size_image_width_991_2x 		= size_image_width_991 |  times: 2 -%}
	{%- assign size_image_height_991_2x 	= size_image_height_991 | times: 2 -%}

	{%- assign size_image_width_767 		= 734 -%}
	{%- assign size_image_height_767 		= size_image_width_767 -%}
	{%- assign size_image_width_767_2x 		= size_image_width_767 |  times: 2 -%}
	{%- assign size_image_height_767_2x 	= size_image_height_767 | times: 2 -%}

	{%- assign size_image_width_420 		= 386 -%}
	{%- assign size_image_height_420 		= size_image_width_420 -%}
	{%- assign size_image_width_420_2x 		= size_image_width_420 |  times: 2 -%}
	{%- assign size_image_height_420_2x 	= size_image_height_420 | times: 2 -%}

	{%- assign size_image_width_375 		= 342 -%}
	{%- assign size_image_height_375 		= size_image_width_375 -%}
	{%- assign size_image_width_375_2x 		= size_image_width_375 |  times: 2 -%}
	{%- assign size_image_height_375_2x 	= size_image_height_375 | times: 2 -%}
{%- else -%}
	{%- assign size_image_width 	= 959 -%}
	{%- assign size_image_height 	= 683 -%}
	{%- assign size_image_width_2x 	= size_image_width |  times: 2 -%}
	{%- assign size_image_height_2x = size_image_height | times: 2 -%}

	{%- assign size_image_width_1500 		= 749 -%}
	{%- assign size_image_height_1500 		= 533 -%}
	{%- assign size_image_width_1500_2x 	= size_image_width_1500 |  times: 2 -%}
	{%- assign size_image_height_1500_2x 	= size_image_height_1500 | times: 2 -%}

	{%- assign size_image_width_1199 		= 599 -%}
	{%- assign size_image_height_1199 		= 426 -%}
