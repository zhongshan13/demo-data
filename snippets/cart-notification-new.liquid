{% comment %}
	------------------------------------------------------------------------------
	Snippet: Cart notification (Only settings.redesign == 'alternate')
	Render shopping cart notification

	Usage:
	{%- render 'cart-notification-new' -%}
	------------------------------------------------------------------------------
{% endcomment %}

{{ 'cart-notification-new.build.css' | asset_url | stylesheet_tag }}
<script src="{{- 'cart-notification.build.min.js' | asset_url -}}" defer></script>

<div class="cart-notification-new js-cart-notification">
	<div class="cart-notification-new__container js-cart-notification-modal" aria-modal="true" role="dialog" tabindex="-1">
		<div class="cart-notification-new__header">
			<h2 class="cart-notification-new__heading h4">
				{{- 'cart.notifications.added_heading' | t -}}:
			</h2>

			<button
				type="button"
				class="focus-visible-outline cart-notification-new__close"
				data-notification-close
				aria-label="{{- 'general.accessibility.close_modal' | t | escape -}}"
			>
				{% render 'icons-small', icon: 'close' %}
			</button>
		</div>

		<div class="cart-notification-new__body js-cart-notification-content"></div>

		<div class="cart-notification-new__footer">
			<a
				href="{{- routes.cart_url -}}"
				class="button-link-new focus-visible-outline cart-notification-new__cta"
				{% if settings.cart_type == 'drawer' %}
					data-target="CartDrawer"
					data-js-toggle="CartDrawer"
					aria-expanded="false"
					aria-controls="CartDrawer"
					data-notification-close
				{% endif %}
			>
				{{- 'cart.notifications.view_cart' | t -}}

				<span class="button-link-new__icon-wrapper">
					<span class="button-link-new__icon">
						{% render 'icons-new', icon: 'arrow-right' %}
					</span>
				</span>
			</a>

			<form
				action="{{- routes.cart_url -}}"
				method="post"
				id="cart-notification-form"
				class="cart-notification-new__form"
			>
				<button class="button-new button--primary cart-notification-new__cta" name="checkout" type="submit">
					{{- 'cart.general.checkout' | t -}}
				</button>
			</form>
		</div>
	</div>
</div>
